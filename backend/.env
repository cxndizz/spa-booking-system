# üîê Environment Variables for Spa Booking System

# Database
DATABASE_URL="postgresql://spauser:spapassword@localhost:5432/spa_booking_db?schema=public"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# LINE API
LINE_CHANNEL_ACCESS_TOKEN="your-line-channel-access-token"
LINE_CHANNEL_SECRET="your-line-channel-secret"
LINE_WEBHOOK_URL="https://your-backend.onrender.com/webhooks/line"

# LIFF
LIFF_APP_ID="your-liff-app-id"

# Omise (Payment)
OMISE_PUBLIC_KEY="your-omise-public-key"
OMISE_SECRET_KEY="your-omise-secret-key"
OMISE_WEBHOOK_URL="https://your-backend.onrender.com/webhooks/omise"

# Server
PORT=3000
NODE_ENV="development"

# CORS (Frontend URLs)
FRONTEND_URL="http://localhost:3001,https://your-admin.vercel.app"

# Admin Panel
ADMIN_DEFAULT_USERNAME="admin"
ADMIN_DEFAULT_PASSWORD="admin123"

# Business Settings
BUSINESS_NAME="Your Spa Name"
BUSINESS_PHONE="+66-xx-xxx-xxxx"
BUSINESS_EMAIL="info@yourspa.com"

# File Upload (if needed)
UPLOAD_MAX_SIZE="5MB"
UPLOAD_ALLOWED_TYPES="image/jpeg,image/png,image/gif"

# Logging
LOG_LEVEL="info"
